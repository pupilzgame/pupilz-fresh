{
  "expo": {
    "name": "pupilz-fresh",
    "slug": "pupilz-fresh",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#060913"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#060913"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "Pupilz Pod Descent",
      "shortName": "Pupilz",
      "description": "Epic space shooter game - defend Earth from alien invasion!",
      "startUrl": "/",
      "display": "standalone",
      "orientation": "portrait",
      "themeColor": "#060913",
      "backgroundColor": "#060913",
      "bundler": "metro",
      "preferRelatedApplications": false,
      "scope": "/",
      "crossOrigin": "anonymous",
      "lang": "en",
      "icons": [
        {
          "src": "./assets/icon.png",
          "sizes": "192x192",
          "type": "image/png",
          "purpose": "any maskable"
        },
        {
          "src": "./assets/icon.png",
          "sizes": "512x512", 
          "type": "image/png",
          "purpose": "any maskable"
        }
      ]
    }
  }
}
